{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
<tr>
                <h1 class="text-danger fw-bold m-4 ">[ {{  event.name}} ]</h1>
            </tr>
    <table class="table">
        <tbody>
            <tr>
                <th>Id </th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ event.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td row="3">{{ event.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <img src='{{ event.image }}' width="350" class='image mt-3 mb-4' alt=''>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ event.capacity }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ event.Email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ event.phone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ event.address }}</td>
            </tr>
            <tr>
                <th>URL</th>
                <td><h5><a target="_blank" href="{{ event.URL }}" class="card-title">URL :<span>{{ event.URL }}</span></a></h5>
               </td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.Type }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info my-2" href="{{ path('app_events_index') }}">back to list</a>

    <a class="btn btn-warning  my-2" href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a>

    {{ include('events/_delete_form.html.twig') }}
{% endblock %}
